# ------------------------------------------------
# Define Provider
# ------------------------------------------------
provider "aws" {
	region = "us-east-1"
}

# ------------------------------------------------
# Create Bucket S3
# ------------------------------------------------
resource "aws_s3_bucket" "terraform_state" {
	bucket = "apalen-east1-bucket-terraform"

	versioning {
		enabled = true
	}

	lifecycle {
		prevent_destroy = true
	}
}

